\newcommand{\help}[2][]{\Oldtodo[inline,color=pink, #1]{\textbf{Help requested:} #2}}
\newcommand{\feedback}[2][]{\Oldtodo[inline,color=pink, #1]{\textbf{Feedback requested:} #2}}
